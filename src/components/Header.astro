---
<header class="fixed w-full bg-white/95 backdrop-blur-sm shadow-sm z-50">
  <div class="container mx-auto px-4 py-3">
    <nav class="flex items-center justify-between">
      <a href="/" class="flex items-center space-x-2">
        <img src="/logo.svg" alt="Transformation Made Easy" class="h-10 w-auto" />
        <span class="text-xl font-bold bg-gradient-to-r from-indigo-600 to-cyan-500 bg-clip-text text-transparent">
          Transformation Made Easy
        </span>
      </a>
      
      <div class="hidden md:flex items-center space-x-8">
        <a href="/about" class="text-gray-600 hover:text-indigo-600">About</a>
        <a href="/blog" class="text-gray-600 hover:text-indigo-600">Blog</a>
        <a href="/medical-weight-loss" class="text-gray-600 hover:text-indigo-600">Medical Weight Loss</a>
        <a href="/keto-guide" class="text-gray-600 hover:text-indigo-600">Keto Guide</a>
        <a href="/equipment-guide" class="text-gray-600 hover:text-indigo-600">Equipment</a>
        <a href="/faq" class="text-gray-600 hover:text-indigo-600">FAQ</a>
        <a href="/get-started" class="px-4 py-2 bg-gradient-to-r from-indigo-600 to-cyan-500 text-white rounded-full hover:opacity-90">
          Get Started
        </a>
      </div>

      <button class="md:hidden p-2" id="mobile-menu-button" aria-label="Menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </nav>

    <!-- Mobile menu -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1">
        <a href="/about" class="block px-3 py-2 text-gray-600 hover:text-indigo-600">About</a>
        <a href="/blog" class="block px-3 py-2 text-gray-600 hover:text-indigo-600">Blog</a>
        <a href="/medical-weight-loss" class="block px-3 py-2 text-gray-600 hover:text-indigo-600">Medical Weight Loss</a>
        <a href="/keto-guide" class="block px-3 py-2 text-gray-600 hover:text-indigo-600">Keto Guide</a>
        <a href="/equipment-guide" class="block px-3 py-2 text-gray-600 hover:text-indigo-600">Equipment</a>
        <a href="/faq" class="block px-3 py-2 text-gray-600 hover:text-indigo-600">FAQ</a>
        <a href="/get-started" class="block px-3 py-2 bg-gradient-to-r from-indigo-600 to-cyan-500 text-white rounded-lg">
          Get Started
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
