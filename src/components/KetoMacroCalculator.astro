<div class="bg-white p-6 rounded-lg shadow-lg max-w-md mx-auto">
  <h2 class="text-2xl font-bold text-gray-900 mb-4">Keto Macro Calculator</h2>
  <p class="text-gray-500 mb-4">Enter your daily caloric intake and desired macronutrient percentages. The calculator will provide the amount of carbohydrates, protein, and fats you should consume daily.</p>
  <form id="ketoMacroForm" class="space-y-4">
    <div>
      <label for="calories" class="block text-sm font-medium text-gray-700">Daily Caloric Intake</label>
      <div class="mt-1 relative rounded-md shadow-sm">
        <input
          type="number"
          name="calories"
          id="calories"
          class="focus:ring-primary-500 focus:border-primary-500 block w-full pr-16 sm:text-sm border-gray-300 rounded-md"
          placeholder="2000"
        />
      </div>
    </div>

    <div>
      <label for="carbs" class="block text-sm font-medium text-gray-700">Carbohydrates (%)</label>
      <div class="mt-1 relative rounded-md shadow-sm">
        <input
          type="number"
          name="carbs"
          id="carbs"
          class="focus:ring-primary-500 focus:border-primary-500 block w-full pr-16 sm:text-sm border-gray-300 rounded-md"
          placeholder="5"
        />
      </div>
    </div>

    <div>
      <label for="protein" class="block text-sm font-medium text-gray-700">Protein (%)</label>
      <div class="mt-1 relative rounded-md shadow-sm">
        <input
          type="number"
          name="protein"
          id="protein"
          class="focus:ring-primary-500 focus:border-primary-500 block w-full pr-16 sm:text-sm border-gray-300 rounded-md"
          placeholder="20"
        />
      </div>
    </div>

    <div>
      <label for="fats" class="block text-sm font-medium text-gray-700">Fats (%)</label>
      <div class="mt-1 relative rounded-md shadow-sm">
        <input
          type="number"
          name="fats"
          id="fats"
          class="focus:ring-primary-500 focus:border-primary-500 block w-full pr-16 sm:text-sm border-gray-300 rounded-md"
          placeholder="75"
        />
      </div>
    </div>

    <div>
      <button
        type="button"
        onclick="window.calculateMacros()"
        class="w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
      >
        Calculate
      </button>
    </div>
  </form>

  <div id="results" class="mt-6 text-center text-gray-900">
    <!-- Results will be displayed here -->
  </div>
</div>

<script>
  window.calculateMacros = function() {
    const calories = document.getElementById('calories').value;
    const carbsPercent = document.getElementById('carbs').value;
    const proteinPercent = document.getElementById('protein').value;
    const fatsPercent = document.getElementById('fats').value;

    console.log('Calories:', calories);
    console.log('Carbs %:', carbsPercent);
    console.log('Protein %:', proteinPercent);
    console.log('Fats %:', fatsPercent);

    const carbs = (calories * (carbsPercent / 100)) / 4;
    const protein = (calories * (proteinPercent / 100)) / 4;
    const fats = (calories * (fatsPercent / 100)) / 9;

    console.log('Carbs (g):', carbs);
    console.log('Protein (g):', protein);
    console.log('Fats (g):', fats);

    document.getElementById('results').innerHTML = `
      <p>Carbohydrates: ${carbs.toFixed(2)}g</p>
      <p>Protein: ${protein.toFixed(2)}g</p>
      <p>Fats: ${fats.toFixed(2)}g</p>
    `;
  };
</script>
