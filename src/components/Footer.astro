---

<footer class="bg-white border-t border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="mb-8 md:mb-0">
        <h2 class="text-2xl font-bold text-gray-900">Transform Your Body</h2>
        <p class="mt-2 text-base text-gray-500">Your trusted partner in sustainable weight loss and body transformation.</p>
      </div>
      
      <div class="flex space-x-6">
        {socialLinks.map((item) => (
          <a
            href={item.href}
            class="text-gray-400 hover:text-gray-500"
            target="_blank"
            rel="noopener noreferrer"
          >
            <span class="sr-only">{item.name}</span>
            <Fragment set:html={item.icon} />
          </a>
        ))}
      </div>
    </div>
    
    <div class="mt-8 border-t border-gray-200 pt-8">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div>
          <h3 class="text-sm font-semibold text-gray-900 tracking-wider uppercase">Medical Weight Loss</h3>
          <ul class="mt-4 space-y-4">
            <li>
              <a href="/medical-weight-loss" class="text-base text-gray-500 hover:text-gray-900">
                GLP-1 Medications
              </a>
            </li>
            <li>
              <a href="/providers" class="text-base text-gray-500 hover:text-gray-900">
                Find a Provider
              </a>
            </li>
            <li>
              <a href="/success-stories" class="text-base text-gray-500 hover:text-gray-900">
                Success Stories
              </a>
            </li>
          </ul>
        </div>

        <div>
          <h3 class="text-sm font-semibold text-gray-900 tracking-wider uppercase">Nutrition</h3>
          <ul class="mt-4 space-y-4">
            <li>
              <a href="/keto-guide" class="text-base text-gray-500 hover:text-gray-900">
                Keto Guide
              </a>
            </li>
            <li>
              <a href="/meal-plans" class="text-base text-gray-500 hover:text-gray-900">
                Meal Plans
              </a>
            </li>
            <li>
              <a href="/recipes" class="text-base text-gray-500 hover:text-gray-900">
                Recipes
              </a>
            </li>
          </ul>
        </div>

        <div>
          <h3 class="text-sm font-semibold text-gray-900 tracking-wider uppercase">Fitness</h3>
          <ul class="mt-4 space-y-4">
            <li>
              <a href="/equipment-guide" class="text-base text-gray-500 hover:text-gray-900">
                Equipment Guide
              </a>
            </li>
            <li>
              <a href="/workouts" class="text-base text-gray-500 hover:text-gray-900">
                Workout Plans
              </a>
            </li>
            <li>
              <a href="/exercises" class="text-base text-gray-500 hover:text-gray-900">
                Exercise Library
              </a>
            </li>
          </ul>
        </div>

        <div>
          <h3 class="text-sm font-semibold text-gray-900 tracking-wider uppercase">Company</h3>
          <ul class="mt-4 space-y-4">
            <li>
              <a href="/about" class="text-base text-gray-500 hover:text-gray-900">
                About Us
              </a>
            </li>
            <li>
              <a href="/contact" class="text-base text-gray-500 hover:text-gray-900">
                Contact
              </a>
            </li>
            <li>
              <a href="/blog" class="text-base text-gray-500 hover:text-gray-900">
                Blog
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <div class="mt-8 border-t border-gray-200 pt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-base text-gray-400">
        &copy; {currentYear} Transform Your Body. All rights reserved.
      </p>
      <div class="mt-4 md:mt-0 flex space-x-6">
        <a href="/privacy" class="text-sm text-gray-500 hover:text-gray-900">Privacy Policy</a>
        <a href="/terms" class="text-sm text-gray-500 hover:text-gray-900">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>