---
interface Props {
    youtubeId?: string;
    title: string;
    subtitle: string;
}

const { youtubeId = "", title, subtitle } = Astro.props;
---

<div class="relative w-full bg-gradient-to-b from-gray-900 to-gray-800 py-8 md:py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Video Container -->
        <div class="relative w-full overflow-hidden rounded-xl shadow-2xl">
            <div class="aspect-w-16 aspect-h-9">
                {youtubeId && (
                    <iframe
                        src={`https://www.youtube.com/embed/${youtubeId}?autoplay=0&mute=0&controls=1&rel=0`}
                        title="Welcome Video"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen
                        class="absolute inset-0 w-full h-full"
                    ></iframe>
                )}
            </div>
        </div>

        <!-- Text Overlay -->
        <div class="mt-8 text-center">
            <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-white mb-4">
                {title}
            </h1>
            <p class="text-lg sm:text-xl md:text-2xl text-gray-200">
                {subtitle}
            </p>
        </div>
    </div>
</div>

<style>
    /* Additional mobile optimizations */
    @media (max-width: 640px) {
        .aspect-w-16 {
            padding-bottom: 56.25%; /* 16:9 aspect ratio */
        }
    }
</style>
